{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Project Config",
  "compilerOptions": {
    "lib": [
      "ESNext"
    ],
    "module": "ESNext",
    "types": [
      "node"
    ],
    "composite": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    // custom
    "noImplicitAny": false
  },
  "include": [
    "scripts"
  ],
  "ts-node": {
    "compilerOptions": {
      "verbatimModuleSyntax": false,
      "module": "CommonJS"
    }
  },
}